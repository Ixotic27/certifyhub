# ============================================
# CertifyHub - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# cp .env.example .env

# Application
APP_ENV=development
APP_NAME=CertifyHub
APP_URL=http://localhost:8001
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars

# Database (Supabase PostgreSQL)
# Get your connection string from: Supabase Dashboard > Settings > Database > Connection string (Transaction pooler)
DATABASE_URL=postgresql://postgres.[your-project-ref]:[your-password]@aws-0-[region].pooler.supabase.com:6543/postgres

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Email Settings (optional - for sending certificates via email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@certifyhub.com

# File Upload
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# Storage (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-service-role-key
STORAGE_BUCKET=certifyhub

# Development
DEBUG=True
